/**
 * Given a WKT string representing a polygon (e.g. from an input textbox),
 * return an array of polygons, each of which being an array of coordinates.
 * Used to generate settings for the js map.
 */
function _gm3_field_get_latlngs_from_polygon_string($value) {
  module_load_include('functions.inc', 'gm3');
  $polygons = [];
  $split_value = $value ? preg_split("/\r\n|\n|\r/", $value) : [];
  foreach($split_value as $string) {
    $polygons = array_merge($polygons, gm3_convert_polygon_string($string));
  }
  return $polygons;
}

/**
 * Given a gm3_field element, walk all descendants to find elements
 * marked with #map_type, and return an array whose keys are the found
 * elements' map_types, and whose values are the element's values; e.g.:
 * [
 *   'gm3_point' => '(1, 2)|(3, 4)',
 *   'gm3_rectangle' => 'POLYGON ((...))'
 * ]
 *
 */
function gm3_field_find_map_values($element, $element_value = null){
  $values = [];

  // If this is the top of the recursive call we can get the field values
  // from the element, as we know it's a gm3_field and thus won't have
  // mutated the values with #value_callback.
  if($element_value === null) {
    // If the #value is empty, we are getting values back from the db,
    // rather than user-submitted values and we can drop out because we
    // already set these values.
    if (empty($element['#value'])) {
      return $values;
    }
    $element_value = $element['#value'];
  }

  foreach(element_children($element) as $name) {
    // We get the value from the parent's #value array rather than from $child[#value],
    // as some elements (e.g. select list) mutate the values when they receive them,
    // but we want the original user input strings.
    $child = $element[$name];
    $value = $element_value[$name];

    if(isset($child['#map_type'])) {
      $values[$child['#map_type']] = $value;
    } else {
      // Pass the values object down to the next level of iteration
      $values += gm3_field_find_map_values($child, $value);
    }
  }

  return $values;
}

/**
 * Hook for generating the gm3_field element
 * Elements with #type=gm3_field should have input fields as their children,
 * named `gm3_[field type]`. With these as children we'll have access to
 * their field values, and just need to convert them to the map settings.
 */
function theme_gm3_field($vars) {
  $element = $vars['element'];

  // We expect the element to have the `#map` field set, which is the js settings for the map
  $map = $element['#map'];
  $values = gm3_field_find_map_values($element);

  // Set the js settings for each shape type
  if(isset($values['gm3_rectangle'])) {
    $map['libraries']['rectangle']['rectangles'] = _gm3_field_get_latlngs_from_polygon_string($values['gm3_rectangle']);
  }
  if(isset($values['gm3_polygon'])){
    $map['libraries']['polygon']['polygons'] = _gm3_field_get_latlngs_from_polygon_string($values['gm3_polygon']);
  }
  if(isset($values['gm3_polyline'])){
    $map['libraries']['polyline']['polylines'] = _gm3_field_get_latlngs_from_polygon_string($values['gm3_polyline']);
  }
  if(isset($values['gm3_point'])){
    $map['libraries']['point']['points'] = _gm3_field_get_array_from_points_string($values['gm3_point']);
  }

  // Call hook_gm3_field_map_alter, let gm3_region_field alter the map too
  drupal_alter('gm3_field_map', $map, $values);

    foreach(array_keys($map['libraries']) as $library) {
    $map['tools'][$library] = theme("gm3_${library}_button", array(
      'id' => $map['id']
    ));
  }

  // Render the map
  $html = theme('gm3_map', array(
    'map' => $map
  ));

  // Render the actual input fields
  $html .= drupal_render_children($element);

  return $html;
}

